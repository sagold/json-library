{
  "name": "json-library",
  "version": "2.0.1",
  "description": "Mothership for json-pointer, json-query and json-relationship",
  "main": "lib/index.js",
  "scripts": {
    "build": "webpack",
    "dist": "NODE_ENV=production webpack",
    "test": "npm run test-unit; npm run test-integration",
