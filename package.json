  },
  "author": "Sascha Goldhofer",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^1.5.3",
    "webpack-dev-server": "^1.7.0"
  },
  "dependencies": {
    "@sagold/json-pointer": "^1.0.1",
    "@sagold/json-query": "^1.0.0",
    "json-relationship": "^1.0.0"
  }
}
